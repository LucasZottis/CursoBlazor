@page "/"
@inject HttpClient http

<Tarefas ListaTarefas="@ObterTarefas()" Titulo="Lista de tarefas"></Tarefas>

@code {
    private List<Tarefa> _tarefas = new List<Tarefa>();

    protected override async Task OnInitializedAsync()
    {
        _tarefas = await http.GetFromJsonAsync<List<Tarefa>>( "Dados/Tarefas.json" );
    }

    private List<Tarefa> ObterTarefas()
    {
        return _tarefas;
    }
}