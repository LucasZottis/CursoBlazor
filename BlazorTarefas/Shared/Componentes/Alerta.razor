@using BlazorTarefas.Entidades.Enums

@switch ( TipoMensagem )
{
    case TipoMensagem.Informacao:
    {
        <div class="alert alert-info mt-4" role="alert">
            <span class="oi oi-check mr-2" aria-hidden="true"></span>
            <strong>@Mensagem</strong>
        </div>
        break;
    }

    case TipoMensagem.Aviso:
    {
        <div class="alert alert-warning mt-4" role="alert">
            <span class="oi oi-warning mr-2" aria-hidden="true"></span>
            <strong>@Mensagem</strong>
        </div>
        break;
    }

    case TipoMensagem.Erro:
    {
        <div class="alert alert-danger mt-4" role="alert">
            <span class="oi oi-circle-x mr-2" aria-hidden="true"></span>
            <strong>@Mensagem</strong>
        </div>
        break;
    }
}

@code {
    [Parameter]
    public string Mensagem { get; set; }

    [Parameter]
    public TipoMensagem TipoMensagem { get; set; }
}
