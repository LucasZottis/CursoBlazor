<div>
    <label>Nova tarefa</label>
    <input type="text" placeholder="Informe a tarefa" @bind="DescricaoNovaTarefa">
    <button class="btn btn-primary" @onclick="( () => AdicionarTarefa.InvokeAsync( DescricaoNovaTarefa ) )">Cadastrar tarefa</button>
</div>

@code {
    //private string _novaTarefa = string.Empty;

    [Parameter]
    public EventCallback<string> AdicionarTarefa { get; set; }

    [Parameter]
    public string DescricaoNovaTarefa { get; set; } = string.Empty;
}
